<h1>編集</h1>
<%= form_with model: @recruit, local: true do |f|%>
<%= render 'layouts/error_messages', model: f.object %>
<%= f.label :タイトル %>
<%= f.text_field :title %>
<%= f.label :画像 %>
<%= f.file_field :image %>
<%= f.label :本文 %>
<%= f.text_area :text %>
<%= f.label :場所 %>
<%= f.text_area :place %>
<%= f.submit "更新", class: "btn-primary" %>
<%end%>
