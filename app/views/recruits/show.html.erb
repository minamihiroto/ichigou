<div class="recruits-show"> 
  <div class="recruits-show-title">
    <%= @recruit.title %>
  </div>
  <div class="recruits-show-image">
    <% if @recruit.image? %>
      <%= image_tag @recruit.image.url, :size =>'410x300' %>
    <% end %>
  </div>
  <div class="recruits-show-text">
    <%= @recruit.text %>
  </div>
  <div class="recruits-show-place">
    <%= @recruit.place %>
  </div>
  <div class="recruits-show-organizer">
    <%= link_to(@organizer.name, "/organizers/#{@organizer.id}") %>
   </div> 
  <div class="recruits-show-app-participant">
    <%if @current_participant != nil && Application.find_by(participants_id: @current_participant.id, recruits_id: @recruit.id) %>
      <p>応募の取り消しは主催者メールアドレスに直接お問い合わせください</p>
    <%elsif @current_participant == nil %>
    <%else%>
      <%=link_to("応募", "/applications/#{@recruit.id}/create", {method: "post"})%>
    <%end%>
  </div>
  <div class="recruits-show-app-organizer">
    <% if @current_organizer != nil && @organizer.id == @current_organizer.id && @recruit.status == true %>
      <%= link_to("編集", edit_recruit_path) %>
      <%= link_to("削除", recruit_path,{method: "DELETE"}) %>
    <% elsif @current_organizer != nil && @organizer.id == @current_organizer.id %>
      <p>応募者</p>
      <% @applications.each do |application| %>
        <%= link_to(application.name, "/participants/#{application.id}")%>
      <%end%>
    <%end%>
   </div> 
</div>